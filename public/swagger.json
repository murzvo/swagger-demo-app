{
  "swagger": "2.0",
  "info": {
    "title": "Drugs API",
    "version": "v1"
  },
  "paths": {
    "/api/drugs": {
      "get": {
        "summary": "Fetch all illegal drugs",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "formula": {
                    "type": "string"
                  },
                  "hazard": {
                    "type": "string"
                  },
                  "overdose": {
                    "type": "integer"
                  },
                  "created_at": {
                    "type": "string"
                  },
                  "upated_at": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}